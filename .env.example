# Global Environment Variables
# Copy this file to .env and update with your actual values

# JWT Configuration (for auth-service)
JWT_SECRET=your_secret_key_change_this_in_production

# Database URLs (if running locally without Docker)
AUTH_DB_URL=mongodb://localhost:27017/eventio_auth
BOOKING_DB_URL=mongodb://localhost:27017/eventio_booking
SEAT_DB_URL=mongodb://localhost:27017/eventio_seats

# Redis URL
REDIS_URL=redis://localhost:6379

# Service Ports (if running locally)
AUTH_SERVICE_PORT=3001
BOOKING_SERVICE_PORT=3002
SEAT_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
GATEWAY_PORT=3000

# Node Environment
NODE_ENV=development
